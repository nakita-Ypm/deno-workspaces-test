{
  "tasks": {
    "vitest": "vitest"
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "src/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "no-unused-vars"],
      "exclude": ["node_modules"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "semiColons": false,
    "include": ["./"],
    "exclude": ["node_modules"]
  },
  "workspace": [
    "packages/fizz-buzz",
    "packages/karabiner"
  ]
}
